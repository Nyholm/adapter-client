{
    "name": "php-http/adapter-client",
    "description": "HTTP Client using adapters",
    "license": "MIT",
    "keywords": ["http", "client", "adapter"],
    "homepage": "http://php-http.org",
    "authors": [
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "php-http/adapter": "^0.1@dev",
        "php-http/adapter-implementation": "^0.1",
        "php-http/client": "^0.1",
        "php-http/helper": "^0.1@dev",
        "php-http/message-decorator": "^0.1",
        "php-http/message-factory": "^0.1",
        "php-http/message-factory-guesser": "^0.1@dev"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^0.1@dev",
        "php-http/adapter-integration-tests": "^0.1@dev",
        "phpspec/phpspec": "~2.1",
        "henrikbjorn/phpspec-code-coverage" : "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Http\\Adapter\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
